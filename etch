<!DOCTYPE html>

<html>
	<head>

		<style type="text/css">
			* {
				box-sizing: border-box;
			}
			body{
				background-color: #000;
			}
			#container{
				margin-left: 20%;
				margin-right: 20%;
				
			}
			.square{
				float:left;
				border: 1px #000 solid;
				background-color: #90C3D4;
			}

		</style>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
	</head>

	<body>
		<button id="clear">Clear</button>
		<div id="container">

		</div>
		
		<script>
		$(function(){

			$('#clear').click(function(){
				var $x = prompt("Please enter Grid Size: ", "16x");
				$('div.square').remove();
				$y = $x*$x;
				var $w = (100/$x) + '%';
				for(i=0; i<$y; i++){
					$('#container').append("<div class='col1 square'>");

				}
				$('.square').css('width', $w);
				$('.square').css('padding-bottom', $w);

				$('.square').mouseover(function(){
				$(this).css('background-color', 'rgb(mouseX, mouseY, mouseX+mouseY)');
				// $f = $(this).css('background-color');


				});
			});
		});

		</script>

	</body>
</html>
